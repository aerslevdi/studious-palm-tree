<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AmberTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="themeColorPrimary">@color/colorAmber</item>
        <item name="themeColorPrimaryDark">@color/colorAmberDark</item>
        <item name="themeColorAccent">@color/colorAmberAccent</item>
    </style>


    <style name="GreyTheme" parent="AppTheme">
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="colorPrimaryDark">?themeColorPrimaryDark</item>
        <item name="colorAccent">?themeColorAccent</item>
        <item name="themeColorPrimary">@color/colorGreyDark</item>
        <item name="themeColorPrimaryDark">@color/colorBlack</item>
        <item name="themeColorAccent">@color/colorGreyAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>
